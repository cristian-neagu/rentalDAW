@model IEnumerable<Rental.Models.Reservation>

@{
    ViewData["Title"] = "Reservations list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    User
                </th>
                <th>
                    License Number
                </th>
                <th>
                    Model
                </th>
                <th>
                    Date of start
                </th>
                <th>
                    Date of end
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observations)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.LicenseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.CarType.FullType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observations)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservationId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>