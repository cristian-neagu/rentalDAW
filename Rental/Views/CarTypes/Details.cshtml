@model Rental.Models.CarType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Details</h2>

    <div>
        <h4>CarType</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Make)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Make)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt>
                Full Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FullType)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd>
                <img src="@Html.DisplayFor(model => model.Image)" style=" max-width: 500px"/>
            </dd>
            <dt style="margin-top:20px;">
                @Html.DisplayNameFor(model => model.Cars)
            </dt>
            <dd style="margin-top:20px;">
                <table class="table">
                    <tr>
                        <th>License Number</th>
                        <th>Number of seats</th>
                        <th>Color</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Cars)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicenseNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Seats)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Color)
                            </td>
                            <td>
                                <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.CarId"> Details </a>
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>